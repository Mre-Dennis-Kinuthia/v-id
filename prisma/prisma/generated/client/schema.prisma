// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  program   String
}

model InstitutionProfile {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  institution    String
  programs       String
  facilitator    String
  username       String
  password       String
  dateOfRegistration DateTime @default(now())
}
